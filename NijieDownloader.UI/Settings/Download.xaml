<UserControl x:Class="NijieDownloader.UI.Settings.Download"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:np="clr-namespace:NijieDownloader.UI.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Network" Style="{StaticResource Heading2}" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Root Directory" />
                    <TextBox Grid.Row="0" Grid.Column="1" Height="25" Text="{Binding Source={x:Static np:Settings.Default}, Path=RootDirectory, Mode=TwoWay}" />
                    
                    <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="100" Text="Filename Format" />
                            <TextBox Width="300" Height="25" Text="{Binding Source={x:Static np:Settings.Default}, Path=FilenameFormat, Mode=TwoWay}"/>
                            <TextBlock>
                                <Hyperlink Click="Hyperlink_Click">[?]</Hyperlink>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Name="pnlFilenameHelp" Visibility="Collapsed" MinHeight="100">
                            <TextBlock MinWidth="100" />
                            <TextBlock>
                            {memberId} = Member ID <LineBreak/>
                            {imageId}  = Image ID <LineBreak/>
                            {page}     = Page Number for manga <LineBreak/>
                            {maxPage}  = Page Count for manga <LineBreak/>
                            {tags}     = Image Tags <LineBreak/>
                            {searchTags}= Search Tags used for query <LineBreak/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <CheckBox Grid.Row="2" Grid.Column="1" Width="100" Content="Overwrite" HorizontalAlignment="Left" IsChecked="{Binding Source={x:Static np:Settings.Default}, Path=Overwrite, Mode=TwoWay}"/>
                    <Button Grid.Row="3" Grid.Column="1" Width="100" Name="btnSave" Click="btnSave_Click">Save</Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
