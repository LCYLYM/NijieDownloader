<UserControl x:Class="NijieDownloader.UI.Settings.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <BitmapImage x:Key="DonateIcon" UriSource="/Resources/donate.gif" />
    </UserControl.Resources>
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="About" Style="{StaticResource Heading2}" />
                <TextBlock Text="Nijie Downloader" />
                <TextBlock Text="1.0.0.0" Name="txtVersion" />
                <Button Name="btnDonate" HorizontalAlignment="Left" Click="btnDonate_Click">
                    <Image Source="{StaticResource ResourceKey=DonateIcon}" Stretch="None" HorizontalAlignment="Left" />
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
