<Page x:Class="NijieDownloader.UI.ImagePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             xmlns:h="clr-namespace:Nandaka.Common;assembly=Nandaka.Common"
             d:DesignHeight="300" d:DesignWidth="300">
    <Page.Resources>
        <BitmapImage x:Key="ComicIcon" UriSource="/Resources/thumbnail_comic.png" />
        <h:ListToStringConverter x:Key="ListToStringConverter"/>
    </Page.Resources>
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Process Image" Style="{StaticResource Heading2}" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Image ID" HorizontalAlignment="Left"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtImageID" Height="25"/>
                    <Button Grid.Row="0" Grid.Column="2" Width="120" Name="btnFetch" Click="btnFetch_Click">Fetch Image</Button>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Title" HorizontalAlignment="Left"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Name="txtTitle" Height="25" Text="{Binding Path=Image.Title}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Description" HorizontalAlignment="Left"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Name="txtDescription" Height="25" Text="{Binding Path=Image.Description}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Work Date" HorizontalAlignment="Left"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Name="txtWorkDate" Height="25" Text="{Binding Path=Image.WorkDate}"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Tags" HorizontalAlignment="Left"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Name="txtTags" Height="25" Text="{Binding Path=Image.Tags, Converter={StaticResource ListToStringConverter}}"/>

                    <Image Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"
                       Source="{Binding Path=BigImage, IsAsync=true}" 
                       Name="imgBigImage" />

                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
