<Page x:Class="NijieDownloader.UI.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mui="http://firstfloorsoftware.com/ModernUI"
      xmlns:vd="clr-namespace:NijieDownloader.UI.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
	Title="Member Page">
    <Page.Resources>
        <BitmapImage x:Key="ComicIcon" UriSource="/Resources/thumbnail_comic.png" />
        <mui:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <DataTemplate DataType="{x:Type vd:NijieImageViewModel}">
            <StackPanel MaxWidth="130" MaxHeight="210" MouseDown="StackPanel_MouseDown">
                <TextBlock Text="{Binding Path=Image.ImageId}" Height="25"/>
                <TextBlock Text="{Binding Path=Image.Title}" Height="25"/>
                <Grid>
                    <Image Source="{Binding Path=ThumbImage, IsAsync=true}" 
                           Height="128" Width="128" 
                           Name="imgThumb" />
                    <Image Source="{StaticResource ResourceKey=ComicIcon}" 
                           VerticalAlignment="Top" HorizontalAlignment="Left"
                           Height="30" Width="30"
                           Visibility="{Binding Path=Image.IsManga, 
                           Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
                <TextBlock Text="{Binding Path=Status}" Height="25"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <ScrollViewer SizeChanged="ScrollViewer_SizeChanged">
        <Grid Style="{StaticResource ContentRoot}" x:Name="root">
            <DockPanel>
                <StackPanel DockPanel.Dock="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Result" />
                        <TextBlock Name="txtResultCount" Height="25" Text="{Binding Path=Images.Count}"/>
                        <TextBlock Name="lblStatus" />
                    </StackPanel>
                </StackPanel>
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="Search Images" Style="{StaticResource Heading2}" />
                    <DockPanel >
                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                            <TextBlock Text="Query" Margin="5,5,5,0"/>
                            <TextBox  Name="txtQuery" Height="25" Text="{Binding Path=Search.Query}" Width="150"/>
                            <TextBlock Text="Sort" Margin="5,5,5,0"/>
                            <ComboBox Name="cbxSort" Width="100" Margin="5,5,5,5"
                                      ItemsSource="{Binding Path=SortList}" 
                                      SelectedValuePath="Value" DisplayMemberPath="Description" 
                                      SelectedValue="{Binding Path=SelectedSort}"/>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <Button Name="btnPrev" Margin="5,5,5,5" Click="btnPrev_Click" IsEnabled="{Binding Path=Search.IsPrevAvailable}" Content="&lt;" />
                            <TextBox Name="txtPage" Height="25" Text="{Binding Path=Search.Page}" MinWidth="50"/>
                            <Button Name="btnNext" Margin="5,5,5,5" Click="btnNext_Click" IsEnabled="{Binding Path=Search.IsNextAvailable}" Content="&gt;"/>
                        </StackPanel>
                        <TextBlock Width="Auto"/>
                    </DockPanel>
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <TextBlock Text="Search Url" HorizontalAlignment="Left" Margin="5,5,5,0" />
                            <TextBlock Name="txtUrl" Height="25" Width="Auto">
                                <Hyperlink NavigateUri="{Binding Path=Search.QueryUrl}" RequestNavigate="Hyperlink_RequestNavigate">
                                    <Label Content="{Binding Path=Search.QueryUrl}" />
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Button Width="120" Margin="5,5,5,5" Name="btnFetch" Click="btnFetch_Click">Search</Button>
                            <Button Width="120" Margin="5,5,5,5" Name="btnAddBatchJob" Click="btnAddBatchJob_Click">Add To Batch</Button>
                        </StackPanel>
                        <TextBlock Width="Auto"/>
                    </DockPanel>
                </StackPanel>

                <ListBox Name="lbxImages" ItemsSource="{Binding Path=Images}" Height="Auto">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid IsItemsHost="True" Columns="8"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </DockPanel>
        </Grid>
    </ScrollViewer>
</Page>
